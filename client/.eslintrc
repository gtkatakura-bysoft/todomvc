{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "arrow-parens": "off",
    "react/jsx-filename-extension": "off",
    "no-confusing-arrow": "off",
    "no-plusplus": "off",
    "semi": ["error", "never"]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["client/src"]
      }
    }
  },
  "env": {
    "browser": true
  }
}